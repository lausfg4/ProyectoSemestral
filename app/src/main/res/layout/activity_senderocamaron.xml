<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/senderocamaron"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D0E1DC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Cabecera -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0C342C"
                android:paddingTop="42dp"
                android:paddingBottom="26dp"
                android:paddingHorizontal="16dp"
                android:orientation="horizontal"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/logo"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Nombre del sendero -->
            <TextView
                android:id="@+id/txt_nombre_sendero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:text="Sendero Camarón"
                android:textColor="#0C342C"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- Imágenes -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="336dp"
                    android:layout_height="188dp"
                    android:src="@drawable/detallescamaron1"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="188dp"
                    android:src="@drawable/senderito"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="32dp"
                android:text="Descubre la magia del Sendero Camarón, un recorrido natural rodeado de exuberante vegetación, aire puro y vistas panorámicas impresionantes. Ideal para caminantes de todos los niveles. ¡Ven y vive una aventura inolvidable!"
                android:textSize="16sp"
                android:textColor="#0C342C" />

            <!-- Sección de comentarios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comentarios"
                        android:textColor="#114D04"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_valoracion_general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9   (23 reseñas)"
                        android:textColor="#0C342C"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_comentar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0C342C"
                    android:text="Comentar"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="24dp" />
            </LinearLayout>

            <!-- Título Reseñas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reseñas del sendero"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0C342C"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="12dp" />

            <!-- Contenedor dinámico de reseñas -->
            <LinearLayout
                android:id="@+id/contenedor_resenas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="60dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
