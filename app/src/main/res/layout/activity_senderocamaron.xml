<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rcvp7m4s2zpc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#D0E1DC">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rxqfbkrb5j6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0C342C"
                android:paddingTop="42dp"
                android:paddingBottom="26dp"
                android:paddingHorizontal="1dp"
                android:layout_marginBottom="39dp"
                android:elevation="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r0nymstbkzpy"
                    android:layout_width="53dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="12dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/rml3eze355yp"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Detalles"
                    />
                <LinearLayout
                    android:id="@+id/rzfxtvv79pe"
                    android:layout_width="53dp"
                    android:layout_height="42dp"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/rnsd06edcabf"
                android:textColor="#0C342C"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginBottom="45dp"
                android:layout_marginStart="83dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Sendero Camarón"
                />
            <LinearLayout
                android:id="@+id/rnc1842py0v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="55dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r4x62cs4avsx"
                    android:layout_width="336dp"
                    android:layout_height="188dp"
                    android:layout_marginEnd="22dp"
                    android:src="@drawable/detallescamaron1"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:id="@+id/ry7d0xi9p8fa"
                    android:layout_width="60dp"
                    android:layout_height="190dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/rgmjw1vz05s"
                android:textColor="#0C342C"
                android:textSize="20sp"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="23dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Descubre la magia del Sendero La Poma, un recorrido natural rodeado de exuberante vegetación, aire puro y vistas panorámicas impresionantes.\n\nIdeal para caminantes de todos los niveles, este \nsendero ofrece una experiencia \ntranquila y revitalizante, perfecta para conectar con\n la naturaleza y desconectarse del estrés diario. \n\n¡Ven y vive una aventura inolvidable en cada paso!"
                />
            <LinearLayout
                android:id="@+id/rlrq02kjebre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="99dp"
                android:layout_marginStart="14dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rxk44zvhwnp"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/r30h37mk2h8f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Comentarios"
                        android:textColor="#114D04"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rwf7iyncullc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="4.9                       (23 reseñas) "
                        android:textColor="#0C342C"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <Button
                    android:id="@+id/btn_comentar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0C342C"
                    android:text="Comentar"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>-=
</LinearLayout>
