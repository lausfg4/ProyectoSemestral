<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D0E1DC">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0C342C"
        android:paddingVertical="24dp"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/logo"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agrega un comentario"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Contenido con Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Nombre del sendero -->
            <TextView
                android:id="@+id/nombre_sendero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Sendero"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#0C342C"
                android:layout_marginBottom="24dp" />

            <!-- Calificar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificar:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0C342C"
                android:layout_marginBottom="8dp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="0"
                android:layout_marginBottom="24dp"
                android:theme="@style/CustomRatingBar"/>

            <!-- Comentario -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comentario:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0C342C"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edit_comentario"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                android:gravity="top|start"
                android:hint="Escriba su comentario aquí..."
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:padding="12dp"
                android:textColor="#000000" />

            <!-- Foto -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir foto (opcional):"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0C342C"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_importar_foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Importar imagen desde galería"
                android:backgroundTint="#0C342C"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <!-- Vista previa de imagen -->
            <ImageView
                android:id="@+id/image_preview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp"
                android:background="#CCCCCC"
                android:contentDescription="@string/vista_previa_de_imagen"
                android:scaleType="centerCrop"
                tools:visibility="invisible" />


            <!-- Botón Comentar -->
            <Button
                android:id="@+id/btn_comentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentar"
                android:paddingHorizontal="32dp"
                android:paddingVertical="10dp"
                android:backgroundTint="#0C342C"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
